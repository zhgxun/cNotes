package test;

public class Str {
	public static void main(String[] args) {
		eq();
	}
	
	/**
	 * String字符串一经定义后就不可变
	 * 
	 * 要比较两个字符串是否相等, 要使用equals()判断
	 */
	private static void eq() {
		String name1 = "Zhang";
		String name2 = "zhang";
		if (name1.equals(name2)) {
			System.out.println("字符串一致");
		} else {
			System.out.println("字符串不一致");
		}
		
		// 忽略大小小来比较字符串的内容
		if (name1.equalsIgnoreCase(name2)) {
			System.out.println("忽略大小小后字符串一致");
		} else {
			System.out.println("忽略大小小后字符串不一致");
		}
	}
}
